{
	"manifest_version": 2,
	"name": "리브레 위키",
	"version": "1.1",

	"description": "위키질을 위한 다양한 기능을 제공합니다.",
	"icons": {
		"32": "icon-32px.png",
		"128": "icon-128px.png"
	},

	"author": "Nuxe",

	"background": {
		"scripts": [ "js/search.js" ]
	},

	"browser_action": {
		"default_popup": "popup.html"
	},

	"permissions": [
		"contextMenus", "http://*/*", "tabs", "storage"
	],
	
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

	"web_accessible_resources": [
		"img/icon-128px.png"
	]
}
